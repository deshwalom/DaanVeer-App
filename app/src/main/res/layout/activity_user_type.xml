<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".UserType">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_paaji"
        android:gravity="center"
        android:padding="10dp"
        android:text="Select User Type"
        android:textAllCaps="false"
        android:textColor="#327FAF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDonator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="openDonator"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/donator"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:srcCompat="@drawable/donator" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCharity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="openCharity"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/charity"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                app:srcCompat="@drawable/charity"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>